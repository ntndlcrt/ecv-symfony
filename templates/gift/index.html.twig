{% extends 'base.html.twig' %}

{% block title %}Gift index{% endblock %}

{% block body %}
    <h1>Gift index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Src</th>
                <th>Price</th>
                <th>Url</th>
                <th>Excerpt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gift in gifts %}
            <tr>
                <td>{{ gift.id }}</td>
                <td>{{ gift.title }}</td>
                <td>{{ gift.src }}</td>
                <td>{{ gift.price }}</td>
                <td>{{ gift.url }}</td>
                <td>{{ gift.excerpt }}</td>
                <td>
                    <a href="{{ path('app_gift_show', {'id': gift.id}) }}">show</a>
                    <a href="{{ path('app_gift_edit', {'id': gift.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gift_new') }}">Create new</a>
{% endblock %}
